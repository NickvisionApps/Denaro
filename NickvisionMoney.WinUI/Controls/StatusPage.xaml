<UserControl
    x:Class="NickvisionMoney.WinUI.Controls.StatusPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:NickvisionMoney.WinUI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel Spacing="12">
        <FontIcon HorizontalAlignment="Center" FontFamily="{StaticResource SymbolThemeFontFamily}" FontSize="60" Glyph="{x:Bind Glyph}"/>

        <TextBlock HorizontalAlignment="Center" Style="{ThemeResource TitleTextBlockStyle}" Text="{x:Bind Title}"/>

        <TextBlock HorizontalAlignment="Center" Style="{ThemeResource CaptionTextBlockStyle}" Text="{x:Bind Description}"/>
    </StackPanel>
</UserControl>